{
  "name": "csv-to-array",
  "displayName": "CSV to Array",
  "description": "Convert CSV files into C/C# arrays using an interactive table editor.",
  "version": "0.0.5",
  "publisher": "jesusnoel",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/JesusNoel69/csv-to-array"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:csv-to-array.runConverter"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csv-to-array.runConverter",
        "title": "Run converter csv to an array"
      }
    ]
  },
  "files": [
    "images",
    "out",
    "dist",
    "media",
    "src",
    "webview",
    "src/webview"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
